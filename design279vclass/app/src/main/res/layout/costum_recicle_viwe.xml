<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/_34sdp">
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/text_r1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_34sdp"
        android:background="@drawable/edittext_recview_white"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_r2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/text_r2"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_34sdp"
        android:background="@drawable/edittext_recviwe_gray"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toEndOf="@id/text_r1"
        app:layout_constraintEnd_toStartOf="@id/text_r3"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></androidx.appcompat.widget.AppCompatEditText>
    <EditText
        android:id="@+id/text_r3"
        android:layout_width="0dp"
        android:layout_height="@dimen/_34sdp"
        android:background="@drawable/edittext_recview_white"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_r2"
        app:layout_constraintEnd_toStartOf="@id/text_r4"
        tools:ignore="MissingConstraints"></EditText>
    <EditText
        android:id="@+id/text_r4"
        android:layout_width="0dp"
        android:layout_height="@dimen/_34sdp"
        android:background="@drawable/edittext_recview_white"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_marginRight="@dimen/_9sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/te1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_r3"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"></EditText>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/but_add"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/add"
        android:layout_marginTop="@dimen/_67sdp"
        android:layout_marginRight="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        ></androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>