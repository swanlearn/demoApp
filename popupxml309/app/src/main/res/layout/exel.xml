<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/exelback"
    android:layoutDirection="ltr"
    android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="کنسانتره"
            android:textSize="26dp"
            android:textColor="#366796"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="توجه : فایل اکسلی که بارگزاری میفرمایید باید طبق
نمونه باشد در غیر اینصورت فایل خوانده نخواهد شد                         "
            android:textSize="18dp"
            android:textColor="#366796"
            android:layout_marginTop="64dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="142dp"
            android:layout_height="36dp"
            android:text="عکس/نمونه"
            android:textColor="@color/white"
            android:layout_marginTop="139dp"
            android:textSize="18dp"
            android:background="@drawable/butexel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <ImageView
            android:id ="@+id/text1"
            android:layout_width="307dp"
            android:layout_height="128dp"
            android:layout_marginRight="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="209dp"
            android:background="@drawable/exel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            >

        </ImageView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save"
            android:layout_width="111dp"
            android:layout_height="46dp"
            android:layout_marginBottom="24dp"
            android:text = "ثبت"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:layout_marginTop="19dp"
            android:background="@drawable/butexel2"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>