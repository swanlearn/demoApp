<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="@drawable/bg_linear_layout"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_popup_buyers">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/popup" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/iransanse"
            android:text="@string/customers"
            android:textColor="@color/white"
            android:textSize="26dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransanse"
            android:textStyle="bold"
            android:text="@string/cost_gift"
            android:textAlignment="center"
            android:textColor="@color/popup_buyer"

            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransanse"
            android:textStyle="bold"
            android:text="@string/basic_cost"
            android:textAlignment="center"
            android:textColor="@color/popup_buyer"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransanse"
            android:textStyle="bold"
            android:text="@string/fat_percent"
            android:textAlignment="center"
            android:textColor="@color/popup_buyer"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransanse"
            android:textStyle="bold"
            android:text="@string/weight"
            android:textAlignment="center"
            android:textColor="@color/popup_buyer"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransanse"
            android:textStyle="bold"
            android:text="@string/name"
            android:textAlignment="center"
            android:textColor="@color/popup_buyer"
            android:textSize="20sp" />


    </LinearLayout>

 <View
     android:layout_width="match_parent"
     android:layout_height="2dp"
     android:background="@color/popup_buyer"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransanse"
            android:textStyle="bold"
            android:background="@drawable/bg_txt"
            android:textAlignment="center"
            android:textColor="@color/popup_buyer"
            android:layout_marginEnd="10dp"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransanse"
            android:textStyle="bold"
            android:background="@drawable/bg_txt"
            android:textAlignment="center"
            android:textColor="@color/popup_buyer"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransanse"
            android:textStyle="bold"
            android:background="@drawable/bg_txt"
            android:textAlignment="center"
            android:textColor="@color/popup_buyer"
            android:layout_marginEnd="10dp"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransanse"
            android:textStyle="bold"
          android:background="@drawable/bg_txt"
            android:textAlignment="center"
            android:layout_marginEnd="10dp"
            android:textColor="@color/popup_buyer"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransanse"
            android:textStyle="bold"
            android:background="@drawable/bg_txt"
            android:textAlignment="center"
            android:textColor="@color/popup_buyer"
            android:textSize="20sp" />


    </LinearLayout>
    <View
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/popup_buyer"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:orientation="vertical">
       <androidx.appcompat.widget.AppCompatImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:srcCompat="@drawable/addd"
           android:layout_gravity="right"
           android:layout_marginEnd="10dp"
           android:layout_marginTop="8dp"/>
   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/popup_buyer"/>

  <RelativeLayout
      android:layout_marginTop="25dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <androidx.appcompat.widget.AppCompatButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="20dp"
          android:background="@drawable/bg_btn_buyers"
          android:text="@string/excel"
          android:textSize="20dp"
          android:padding="10dp"
          android:textColor="@color/white"
          android:fontFamily="@font/iransanse"/>

      <androidx.appcompat.widget.AppCompatButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginLeft="20dp"
          android:background="@drawable/bg_btn_buyers_invers"
          android:fontFamily="@font/iransanse"
          android:padding="10dp"
          android:text="@string/registerr"
          android:textColor="@color/white"
          android:textSize="20dp" />

  </RelativeLayout>



</LinearLayout>