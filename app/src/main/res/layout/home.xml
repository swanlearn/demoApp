    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout7"
        app:layout_goneMarginTop="12dp">

        <RelativeLayout
            android:id="@+id/relativeLayout8"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_support"
           >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_statics"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"

                app:srcCompat="@drawable/support" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_statics"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/iransanse"
                android:text="@string/support"
                android:textColor="@color/white"
                android:textSize="26dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:background="@drawable/bg_profile">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"

                app:srcCompat="@drawable/man" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/iransanse"
                android:text="@string/profile"
                android:textColor="@color/white"
                android:textSize="26dp" />


        </RelativeLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="13dp"
        android:background="#366796"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>