<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RegisterFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="ثبت نام"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="@string/register"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:text="@string/f_name"
                        android:textColor="@color/black"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <EditText
                        android:id="@+id/et_first_name"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_32sdp"
                        android:background="@drawable/gray_background"
                        android:hint="نام خود را وارد کنید"
                        android:padding="@dimen/_4sdp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:text="@string/l_name"
                        android:textColor="@color/black"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <EditText
                        android:id="@+id/et_last_name"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_32sdp"
                        android:background="@drawable/gray_background"
                        android:hint="نام خانوادگی خود را وارد کنید"
                        android:padding="@dimen/_4sdp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_register_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:text="@string/register_email"
                        android:textColor="@color/black"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_32sdp"
                        android:background="@drawable/gray_background"
                        android:hint="example@gmail.com"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_4sdp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_register_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:text="@string/username"
                        android:textColor="@color/black"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_32sdp"
                        android:background="@drawable/gray_background"
                        android:hint="نام کاربری خود را وارد کنید"
                        android:padding="@dimen/_4sdp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_register_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:text="@string/phone"
                        android:textColor="@color/black"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_32sdp"
                        android:background="@drawable/gray_background"
                        android:hint="شماره همراه"
                        android:inputType="number"
                        android:maxLength="11"
                        android:padding="@dimen/_4sdp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:text="@string/password"
                        android:textColor="@color/black"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <EditText
                        android:id="@+id/et_pass"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_32sdp"
                        android:background="@drawable/gray_background"
                        android:hint="12345"
                        android:gravity="right|center_vertical"
                        android:inputType="textPassword"
                        android:padding="@dimen/_4sdp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:text="@string/re_password"
                        android:textColor="@color/black"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <EditText
                        android:id="@+id/et_re_pass"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_32sdp"
                        android:background="@drawable/gray_background"
                        android:hint="12345"
                        android:inputType="textPassword"
                        android:gravity="right|center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:orientation="horizontal"
                      android:padding="8dp">

                        <TextView
                          android:id="@+id/textView51"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="را مطالعه و می پذیرم." />

                        <TextView
                          android:id="@+id/textView50"
                          android:textColor="@color/blue_200"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="قوانین و مقررات " />


                        <CheckBox
                          android:id="@+id/chk_policy"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layoutDirection="rtl"
                          />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_15sdp"
                        app:cardCornerRadius="15dp">

                        <TextView
                            android:id="@+id/button2"
                            style="@style/Widget.MaterialComponents.TimePicker.ImageButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            android:text="ثبت نام"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>



                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>