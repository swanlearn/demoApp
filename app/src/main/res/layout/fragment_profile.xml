<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".fragment.ProfileFragment">


  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
          android:id="@+id/linearLayout2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_toolbar"
          android:paddingHorizontal="@dimen/_16sdp"
          android:paddingVertical="@dimen/_8sdp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

          <ImageButton
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_notifications_black_24dp" />

          <androidx.cardview.widget.CardView
            android:id="@+id/btn_home"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            app:cardCornerRadius="@dimen/_500sdp"
            android:translationZ="@dimen/_500sdp">

            <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:src="@drawable/logo_image"
              android:contentDescription="@string/app_name" />
          </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <androidx.cardview.widget.CardView
          android:id="@+id/profile_user_info"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_margin="@dimen/_8sdp"
          android:elevation="20dp"
          app:cardCornerRadius="@dimen/_12sdp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/_3sdp"
              android:orientation="horizontal">

              <TextView
                android:id="@+id/textView43"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="مشخصات کاربری"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

              <androidx.cardview.widget.CardView
                android:id="@+id/et_edit_user"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                  android:layout_width="@dimen/_28sdp"
                  android:layout_height="@dimen/_28sdp"
                  android:background="@color/blue_200"
                  android:padding="@dimen/_4sdp"
                  app:srcCompat="@drawable/ic_edit" />
              </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/profile_recycler"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/_3sdp"
              app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          android:id="@+id/card_user_bank"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/_8sdp"
          android:layout_marginTop="@dimen/_8sdp"

          android:elevation="20dp"
          app:cardCornerRadius="@dimen/_12sdp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/profile_user_info">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/_3sdp"
              android:orientation="horizontal">

              <TextView
                android:id="@+id/textView46"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="اطلاعات دریافت حقوق"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

              <androidx.cardview.widget.CardView
                android:id="@+id/et_edit_user_bank"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                  android:layout_width="@dimen/_28sdp"
                  android:layout_height="@dimen/_28sdp"
                  android:background="@color/blue_200"
                  android:padding="@dimen/_4sdp"
                  app:srcCompat="@drawable/ic_edit" />
              </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/user_bank_recycler"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/_3sdp"
              app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/_8sdp"
          android:layout_marginTop="@dimen/_16sdp"
          android:layout_marginBottom="@dimen/_56sdp"
          app:cardBackgroundColor="@color/white"
          app:cardCornerRadius="@dimen/_12sdp"
          app:cardElevation="20dp"
          app:contentPadding="@dimen/_16sdp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/card_user_bank">


          <LinearLayout
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="@dimen/_8sdp"
              android:src="@drawable/ic_logout" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="@dimen/_8sdp"
              android:layout_marginStart="@dimen/_5sdp"
              android:text="خروج از پروفایل"
              android:textColor="@color/black"
              android:textSize="@dimen/_15sdp" />
          </LinearLayout>
        </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
  </ScrollView>

</FrameLayout>
